- page_title @recipe.id

%h2 required plugins
%ul
  - @recipe.plugins.each do |pl|
    %li
      = pl.gem_name
      - unless pl.installed?
        (not installed)

= form_for(@recipe, url: apply_daemon_recipe_path, method: :put) do |f|
  - @recipe.models.each do |model|
    - f.object = model.new(model.initial_params)
    = render partial: "plugin_form", locals: {model: model, f: f}
  = submit_tag "Apply", class: "btn btn-primary"
